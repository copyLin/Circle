<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.linxl.circle">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ImageDetailActivity" />
        <activity android:name=".NewQuestionActivity" />
        <activity android:name=".NewLostActivity" />
        <activity android:name=".NewIdleActivity" />
        <activity android:name=".NewDeliveryActivity" />
        <activity android:name=".ContactsActivity" />
        <activity android:name=".HomepageActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name="com.soundcloud.android.crop.CropImageActivity"/>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.example.linxl.circle.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity android:name=".ChatActivity" />
        <activity android:name=".QuestionDetailActivity" />
        <activity android:name=".LostDetailActivity" />
        <activity android:name=".IdleDetailActivity" />

        <service
            android:name=".ChatService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".MyQuestionsActivity" />
        <activity android:name=".MyLostActivity" />
        <activity android:name=".MyIdleActivity" />
        <activity android:name=".MyDeliveryActivity" />
        <activity android:name=".MyCollectionsActivity" />
        <activity android:name=".UnreadViewPointActivity" />
        <activity android:name=".MyViewPointActivity" />
        <activity android:name=".UserCardActivity" />
        <activity android:name=".SearchActivity" />
        <activity android:name=".SettingActivity" />
        <activity android:name=".UserImageActivity"></activity>
    </application>

</manifest>